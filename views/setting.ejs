<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Setting</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h2>Project Settings</h2>
        <div class="row d-flex align-items-center flex-column gap-4">
            <div class="col-md-8">
                <% projectInfo.map(info=> { %>
                    <form action="/update/project" method="post" class="d-flex w-100 flex-column">
                        <label>
                            Name
                            <input type="text" hidden name="id" value="<%= info.id %>" />
                            <input class="form-control mb-2" type="text" value="<%= info.name %>" name="name" />
                        </label>
                        <label>
                            Description
                            <textarea class="form-control mb-2" type="text" name="description" cols="30" rows="5">
                                <%= info.description %>
                            </textarea>
                        </label>
                        <div class="d-flex">
                            <button class="btn btn-success mb-2 w-50 me-1" type="submit">
                                Update
                            </button>
                            <a href="/home" class="btn btn-secondary mb-2 ms-1 w-50">Cancel</a>
                        </div>
                    </form>
            </div>
            <div class="col-md-4 d-flex align-items-center gap-2">
                <a href="/home" class="btn btn-warning w-100 mb-2">back home page</a>
                <a href="/project/deleteProject/<%= info.id %>" class="btn btn-danger w-100">
                    Delete Project
                </a>
                <% }) %>
            </div>
        </div>
    </div>
    <script></script>
</body>

</html>