      input {
        width: 400px;
      }
      a{
        text-decoration: none;
      }
      ul{
        list-style: none;
      }
    </style>
  </head>
  <body>
    <nav class="bg-light d-flex align-items-center justify-content-between p-3">
      <ul
        class="nav-links m-0 d-flex align-items-center justify-content-between gap-3"
      >
        <li>
          <a href="/home">exit</a>
        </li>
        <li>
          <a href="/logout">Log out</a>
        </li>
      </ul>
    </nav>

    <form
      action="/addProject"
      method="post"
      style="
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      "
    >
      <h2 class="h2">New Project</h2>
      <label>
        Name
        <input type="text" name="name" class="form-control w-100" required />
      </label>
      <label>
        Description
        <textarea
          name="description"
          cols="50"
          required
          rows="5"
          class="form-control"
        ></textarea>
      </label>
      <button class="btn btn-primary mt-2" type="submit">
        Add new project
      </button>
    </form>
  </body>
