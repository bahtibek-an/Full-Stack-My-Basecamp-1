<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Comments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    .form {
      border: 1px solid #000;
    }
    a{
      text-decoration: none;
    }
    
    ul{
      list-style: none;
    }
  </style>
</head>

<body>
  <div class="container">
    <nav class="bg-light d-flex align-items-center justify-content-between">
      <ul class="nav-links m-0 d-flex align-items-center justify-content-between">
        <li>
          <a href="/home">exit</a>
        </li>
      </ul>
    </nav>
  </div>

  <div class="container w-50" style="margin-top: 80px">
    <div class="row my-5">
      <% comments.forEach((comment) => { %>
            <div class="col-md-12 mt-2 ">
                <div class="card form">
                    <div class="card-header">
                        <p class="m-0">
                            <%= comment.user %>
                        </p>
                    </div>
                    <div class="card-body">
                        <p class="m-0">
                            <%= comment.comment %>
                        </p>
                    </div>
                </div>
            </div>
    <% }) %>
    
    </div>
    <form action="/addComment/<%= id %>" method="post" class="d-flex ">
      <input type="text" name="comment" class="form-control form" style="margin-right: 5px;"
        placeholder="Add your comment">
      <button class="btn btn-primary">add</button>
    </form>

  </div>

</body>

</html>